{
  "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
  "extends": ["@readme/standards/biome/esm"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noDefaultExport": "off"
      },
      "suspicious": {
        "noThenProperty": "off"
      }
    }
  }
}
